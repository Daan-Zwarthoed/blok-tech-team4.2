{% extends "layouts/layout.njk" %}
{% block title %}Filter {% endblock %}
{% block content %}
    <div class="matches">
        <h2>{{ header }}</h2>
        {% for user in filteredProfiles %}
            <section>
                <article>
                    <p>{{ user.username }}</p>
                    <p>Top game: {{ chosenGame }}</p>
                    <p>Playstyle: {{ user.playstyle }}</p>
                    <p>Playtime: {{ user.playtime }}</p>
                </article>
                <a href="#" class="like">Like</a>
            </section>
        {% endfor %}
    </div>
{% endblock %}