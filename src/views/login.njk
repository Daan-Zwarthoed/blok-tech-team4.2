{% extends "layouts/layout.njk" %}
{% block title %}
  Login
{% endblock %}
{% block content %}
    <form action='#' method='post'>
        <label for='email'>Email</label>
        <input id='email' type='email' name='email' required maxlength='35' placeholder='Your email...'>

        <label for='password'>Password</label>
        <input id='password' type='password' name='password' required maxlength='25' placeholder='Your password...'>

        <button type='submit'>Register</button>
    </form>
{% endblock %}