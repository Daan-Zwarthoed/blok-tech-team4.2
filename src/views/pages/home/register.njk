{% extends "layouts/layout.njk" %}
{% block title %}
  Register
{% endblock %}
{% block content %}
  <section class='register'>
    <section class='information'>
      <h1>Register</h1>
      <form action='/register' method='post' enctype='multipart/form-data'>
        <div class='wrapper'>
          <label for='username'>Username</label>
          <input id='username' type='text' name='username' required maxlength='20' placeholder='Your username...'>
        </div>
        <div class='wrapper'>
          <label for='password'>Password</label>
          <input id='password' type='password' name='password' required maxlength='25' placeholder='Your password...'>
        </div>
        <div class='wrapper'>
          <label for='email'>Email</label>
          <input id='email' type='email' name='email' required maxlength='35' placeholder='Your email...'>
        </div>
        <div class='wrapper'>
          <label for='avatar'>Avatar</label>
          <input id='avatar' type='file' name='avatar' accept='image/*' required>
        </div>
        <div class='wrapper'>
          <label for='banner'>Banner</label>
          <input id='banner' type='file' name='banner' accept='image/*' required>
        </div>

        {% if games %}
          <div>
            <ul>
              {% for game in games %}
                <li class='onboard-games'>
                  <input type='checkbox' id='{{game.titleSlug}}' name='{{game.titleSlug}}' value='liked'>
                  <label for='{{game.titleSlug}}'>
                    <img src='/images/games/{{game.image}}'>
                    <h2>{{game.title}}</h2>
                    {% if games.genres %}
                      <ul>
                        {% for genre in game.genres %}
                          <li>{{genre}}</li>
                        {% endfor %}
                      </ul>
                    {% endif %}
                  </label>
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}

        <button type='submit'>Register</button>
      </form>
      <a href='/login'>Already have an account?</a>
    </section>
  </section>
{% endblock %}