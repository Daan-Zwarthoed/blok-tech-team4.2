{% extends "layouts/layout.njk" %}
{% block title %}
  Register
{% endblock %}
{% block content %}
  <section class='register'>
    <form action='/register' method='post' enctype='multipart/form-data'>
      <h1>Register</h1>
      <div class='wrapper'>
        <label for='username'>Username</label>
        <input id='username' type='text' name='username' required maxlength='20' placeholder='Your username...'>
      </div>
      <div class='wrapper'>
        <label for='password'>Password</label>
        <input id='password' type='password' name='password' required maxlength='25' placeholder='Your password...'>
      </div>

      <div class='wrapper'>
        <label for='email'>Email</label>
        <input id='email' type='email' name='email' required maxlength='35' placeholder='Your email...'>
      </div>

      <div class='wrapper'>
        <label for='avatar'>Avatar</label>
        <input id='avatar' type='file' name='avatar' accept='image/*' required>
      </div>

      <div class='wrapper'>
        <label for='banner'>Banner</label>
        <input id='banner' type='file' name='banner' accept='image/*' required>
      </div>

      {# {% for game in games %}
        <h2>{{game.title}}</h2>
        {% for genre in game.genres %}
          <p>{{genre}}</p>
        {% endfor %}
        <img src='/images/games/{{game.image}}'>
      {% endfor %} #}

      <button type='submit'>Register</button>
    </form>
  </section>
{% endblock %}