{% extends "layouts/layout.njk" %}
{% block title %}
  Login
{% endblock %}
{% block content %}
    <form action='/login' method='post'>
        <label for='username'>Username</label>
        <input id='username' type='text' name='username' required maxlength='20' placeholder='Your username...'>

        <label for='password'>Password</label>
        <input id='password' type='password' name='password' required maxlength='25' placeholder='Your password...'>

        <button type='submit'>Login</button>
    </form>
{% endblock %}