{
    "extends": [
        "wesbos"
    ],
    "rules": {
        "no-console": "off",
        "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "es5",
                "singleQuote": true,
                "printWidth": 120,
                "tabWidth": 6,
            }
        ]
    }
}