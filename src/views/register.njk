{% extends "layouts/layout.njk" %}
{% block title %}
  Register
{% endblock %}
{% block content %}
    <form action='#' method='post'>
        <label for='name'>Name</label>
        <textarea id='name' type='text' name='name' required maxlength='40' placeholder='Your name...'></textarea>

        <label for='password'>Password</label>
        <input id='password' type='password' name='password' required maxlength='25' placeholder='Your password...'>

        <label for='email'>Email</label>
        <input id='email' type='email' name='email' required maxlength='35' placeholder='Your email...'>

        <button type='submit'>Register</button>
    </form>
{% endblock %}