{% extends "layouts/layout.njk" %}
{% block title %}Filter {% endblock %}
{% block content %}
    <div class="matches">
        {% for user in filteredUsers %}
            <section>
                <article>
                    <p>{{ user.username }}</p>
                    <p>Top game: {{ user.topGame }}</p>
                    <p>Playstyle: {{ user.playstyle }}</p>
                    <p>Time: {{ user.time }}</p>
                </article>
                <a href="#" class="like">Like</a>
            </section>
        {% endfor %}
    </div>
{% endblock %}