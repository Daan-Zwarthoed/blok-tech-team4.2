{% extends "layouts/layout.njk" %}
{% block title %}
    Chat
{% endblock %}
{% block content %}
    <div class="chatList">
        <form action="chatSelf/{{ userId }}" method="post">
            {% for user in users %}
                <button name="userOther" value={{ user.username }}>
                    <div class="imgDiv"><img src="/uploads/{{ user.avatar }}"/> </div>
                    <p>{{ user.username }}</p>
                </button>
            {% endfor %}
        </form>
    </div>
{% endblock %}